{
  "schema_version": 1,
  "mission_id": "protocol.review.v1",
  "mission_kind": "protocol",
  "description": "Protocol mission that normalizes analyst deltas and emits deterministic review queues.",
  "inputs": [
    {
      "name": "proposals",
      "type": "array",
      "description": "Incoming proposal deltas with provenance links.",
      "required": true
    }
  ],
  "outputs": [
    {
      "name": "review_packet",
      "description": "Deterministic reviewer packet for apply/reject decisions.",
      "source": {
        "kind": "stage_output",
        "stage_id": "build_packet",
        "output": "review_packet"
      }
    }
  ],
  "policies": {
    "determinism": {
      "execution_order": "linear",
      "stage_selector": "explicit_ids_only",
      "allow_randomness": false
    },
    "conflict_resolution": {
      "source_priority_order": [
        "human",
        "ml_model",
        "heuristic"
      ],
      "confidence_margin": 0.1,
      "tie_breaker": "source_priority_then_stage_id"
    },
    "approval": {
      "human_review_on_apply": true,
      "auto_apply_threshold": 1.0
    },
    "retry_defaults": {
      "max_attempts": 3,
      "backoff_strategy": "linear",
      "initial_delay_ms": 500,
      "jitter": "none"
    }
  },
  "stages": [
    {
      "id": "normalize_proposals",
      "order": 1,
      "kind": "normalize",
      "description": "Normalize proposal payloads into canonical schema fields.",
      "depends_on": [],
      "inputs": [
        {
          "name": "proposals",
          "source": {
            "kind": "mission_input",
            "input": "proposals"
          }
        }
      ],
      "outputs": [
        {
          "name": "normalized_proposals",
          "type": "array",
          "description": "Canonicalized proposals with stable sort keys."
        }
      ]
    },
    {
      "id": "rank_protocol",
      "order": 2,
      "kind": "rank",
      "description": "Apply deterministic protocol ranking.",
      "depends_on": [
        "normalize_proposals"
      ],
      "inputs": [
        {
          "name": "normalized_proposals",
          "source": {
            "kind": "stage_output",
            "stage_id": "normalize_proposals",
            "output": "normalized_proposals"
          }
        }
      ],
      "outputs": [
        {
          "name": "prioritized_proposals",
          "type": "array",
          "description": "Priority-ordered proposal set."
        }
      ]
    },
    {
      "id": "build_packet",
      "order": 3,
      "kind": "report",
      "description": "Create review packet payload.",
      "depends_on": [
        "rank_protocol"
      ],
      "inputs": [
        {
          "name": "prioritized_proposals",
          "source": {
            "kind": "stage_output",
            "stage_id": "rank_protocol",
            "output": "prioritized_proposals"
          }
        }
      ],
      "outputs": [
        {
          "name": "review_packet",
          "type": "object",
          "description": "Reviewer packet ready for queue insertion."
        }
      ]
    }
  ]
}
