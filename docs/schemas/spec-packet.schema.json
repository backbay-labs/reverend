{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Spec Extraction Packet",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "program_name",
    "program_sha256",
    "analysis_sha256",
    "hypotheses",
    "changeset",
    "metadata"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "program_name": {
      "type": "string",
      "minLength": 1
    },
    "program_sha256": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$"
    },
    "analysis_sha256": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$"
    },
    "hypotheses": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/hypothesis"
      }
    },
    "changeset": {
      "$ref": "#/$defs/annotation_changeset"
    },
    "metadata": {
      "type": "object"
    }
  },
  "$defs": {
    "spec_type": {
      "type": "string",
      "enum": [
        "schema",
        "api",
        "state_machine"
      ]
    },
    "artifact_type": {
      "type": "string",
      "enum": [
        "symbol",
        "data_type",
        "comment",
        "function_sig",
        "memory_ref",
        "bookmark",
        "equate"
      ]
    },
    "delta_source": {
      "type": "string",
      "enum": [
        "human",
        "ml_model",
        "import",
        "script"
      ]
    },
    "analyst_identity": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "actor_type",
        "display_name"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "actor_type": {
          "$ref": "#/$defs/delta_source"
        },
        "display_name": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "evidence_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "kind",
        "summary",
        "refs",
        "detail"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "kind": {
          "type": "string",
          "minLength": 1
        },
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "refs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "detail": {
          "type": "object"
        }
      }
    },
    "hypothesis": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "spec_type",
        "name",
        "confidence",
        "description",
        "evidence"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "spec_type": {
          "$ref": "#/$defs/spec_type"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "description": {
          "type": "string"
        },
        "evidence": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/evidence_ref"
          }
        }
      }
    },
    "annotation_delta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "artifact_type",
        "address",
        "old_value",
        "new_value",
        "confidence",
        "source",
        "rationale",
        "evidence_link_ids"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "artifact_type": {
          "$ref": "#/$defs/artifact_type"
        },
        "address": {
          "type": [
            "string",
            "null"
          ]
        },
        "old_value": {},
        "new_value": {},
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "source": {
          "$ref": "#/$defs/delta_source"
        },
        "rationale": {
          "type": "string"
        },
        "evidence_link_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "annotation_changeset": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "author",
        "title",
        "description",
        "deltas"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "author": {
          "$ref": "#/$defs/analyst_identity"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "deltas": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/annotation_delta"
          }
        }
      }
    }
  }
}

