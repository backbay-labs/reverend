{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Provenance Receipt",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "receipt_id",
    "timestamp",
    "actor",
    "action",
    "target",
    "evidence",
    "chain",
    "transaction",
    "receipt_links",
    "metadata",
    "hash"
  ],
  "properties": {
    "receipt_id": {
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "actor": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "actor",
        "actor_type"
      ],
      "properties": {
        "actor": {
          "type": "string",
          "minLength": 1
        },
        "actor_type": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "action": {
      "type": "string",
      "minLength": 1
    },
    "target": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "target_type",
        "target_id",
        "old_value",
        "new_value"
      ],
      "properties": {
        "target_type": {
          "type": "string",
          "minLength": 1
        },
        "target_id": {
          "type": "string",
          "minLength": 1
        },
        "program_id": {
          "type": "string"
        },
        "address": {
          "type": "integer",
          "minimum": 0
        },
        "old_value": {},
        "new_value": {}
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "evidence_type",
          "metadata"
        ],
        "properties": {
          "evidence_type": {
            "type": "string",
            "minLength": 1
          },
          "source_type": {
            "type": [
              "string",
              "null"
            ]
          },
          "source_id": {
            "type": [
              "string",
              "null"
            ]
          },
          "relevance": {
            "type": [
              "number",
              "null"
            ],
            "minimum": 0,
            "maximum": 1
          },
          "description": {
            "type": [
              "string",
              "null"
            ]
          },
          "metadata": {
            "type": "object"
          }
        }
      }
    },
    "chain": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "sequence_number",
        "previous_receipt_id",
        "previous_hash"
      ],
      "properties": {
        "sequence_number": {
          "type": "integer",
          "minimum": 0
        },
        "previous_receipt_id": {
          "type": [
            "string",
            "null"
          ],
          "format": "uuid"
        },
        "previous_hash": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[0-9a-f]{64}$"
        }
      }
    },
    "transaction": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "transaction_id",
        "scope",
        "phase",
        "program_transaction_id"
      ],
      "properties": {
        "transaction_id": {
          "type": "string",
          "format": "uuid"
        },
        "scope": {
          "type": "string",
          "enum": [
            "single",
            "batch"
          ]
        },
        "phase": {
          "type": "string",
          "enum": [
            "apply",
            "rollback",
            "other"
          ]
        },
        "program_transaction_id": {
          "type": "integer",
          "minimum": 0
        },
        "pre_apply_state_hash": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[0-9a-f]{64}$"
        },
        "post_apply_state_hash": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[0-9a-f]{64}$"
        }
      }
    },
    "receipt_links": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "receipt_id",
          "link_type"
        ],
        "properties": {
          "receipt_id": {
            "type": "string",
            "format": "uuid"
          },
          "link_type": {
            "type": "string",
            "enum": [
              "APPLIES_PROPOSAL",
              "ROLLS_BACK_APPLY"
            ]
          }
        }
      }
    },
    "metadata": {
      "type": "object"
    },
    "hash": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "action": {
            "const": "apply"
          }
        },
        "required": [
          "action"
        ]
      },
      "then": {
        "properties": {
          "transaction": {
            "properties": {
              "phase": {
                "const": "apply"
              }
            },
            "required": [
              "phase"
            ]
          },
          "receipt_links": {
            "minItems": 1,
            "items": {
              "properties": {
                "link_type": {
                  "const": "APPLIES_PROPOSAL"
                }
              },
              "required": [
                "link_type"
              ]
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "action": {
            "enum": [
              "rollback",
              "revert"
            ]
          }
        },
        "required": [
          "action"
        ]
      },
      "then": {
        "properties": {
          "transaction": {
            "properties": {
              "phase": {
                "const": "rollback"
              }
            },
            "required": [
              "phase"
            ]
          },
          "receipt_links": {
            "minItems": 1,
            "items": {
              "properties": {
                "link_type": {
                  "const": "ROLLS_BACK_APPLY"
                }
              },
              "required": [
                "link_type"
              ]
            }
          }
        }
      }
    }
  ]
}
