{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Provenance Receipt",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "receipt_id",
    "timestamp",
    "actor",
    "action",
    "target",
    "evidence",
    "chain",
    "transaction",
    "receipt_links",
    "metadata",
    "hash"
  ],
  "properties": {
    "receipt_id": {
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "actor": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "actor",
        "actor_type"
      ],
      "properties": {
        "actor": {
          "type": "string",
          "minLength": 1
        },
        "actor_type": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "action": {
      "type": "string",
      "minLength": 1
    },
    "target": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "target_type",
        "target_id",
        "old_value",
        "new_value"
      ],
      "properties": {
        "target_type": {
          "type": "string",
          "minLength": 1
        },
        "target_id": {
          "type": "string",
          "minLength": 1
        },
        "program_id": {
          "type": "string"
        },
        "address": {
          "type": "integer",
          "minimum": 0
        },
        "old_value": {},
        "new_value": {}
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "dependentRequired": {
          "source_type": [
            "source_id"
          ],
          "source_id": [
            "source_type"
          ]
        },
        "required": [
          "evidence_type",
          "metadata"
        ],
        "properties": {
          "evidence_type": {
            "type": "string",
            "minLength": 1
          },
          "source_type": {
            "type": [
              "string",
              "null"
            ]
          },
          "source_id": {
            "type": [
              "string",
              "null"
            ]
          },
          "entity_type": {
            "type": "string",
            "enum": [
              "static",
              "dynamic",
              "symbolic",
              "taint",
              "proposal",
              "receipt"
            ]
          },
          "entity_id": {
            "type": "string",
            "pattern": "^ev[sdytpr]_[a-z0-9][a-z0-9._:-]*$"
          },
          "entity_schema_version": {
            "type": "integer",
            "const": 1
          },
          "edge": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "edge_type",
              "target_entity_type",
              "target_entity_id",
              "target_entity_schema_version"
            ],
            "properties": {
              "edge_type": {
                "type": "string",
                "enum": [
                  "supports",
                  "derived_from",
                  "corroborates",
                  "supersedes"
                ]
              },
              "target_entity_type": {
                "type": "string",
                "enum": [
                  "static",
                  "dynamic",
                  "symbolic",
                  "taint",
                  "proposal",
                  "receipt"
                ]
              },
              "target_entity_id": {
                "type": "string",
                "pattern": "^ev[sdytpr]_[a-z0-9][a-z0-9._:-]*$"
              },
              "target_entity_schema_version": {
                "type": "integer",
                "const": 1
              }
            }
          },
          "relevance": {
            "type": [
              "number",
              "null"
            ],
            "minimum": 0,
            "maximum": 1
          },
          "description": {
            "type": [
              "string",
              "null"
            ]
          },
          "metadata": {
            "type": "object"
          }
        },
        "allOf": [
          {
            "if": {
              "anyOf": [
                {
                  "required": [
                    "entity_type"
                  ]
                },
                {
                  "required": [
                    "entity_id"
                  ]
                },
                {
                  "required": [
                    "entity_schema_version"
                  ]
                },
                {
                  "required": [
                    "edge"
                  ]
                }
              ]
            },
            "then": {
              "required": [
                "entity_type",
                "entity_id",
                "entity_schema_version"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "entity_type": {
                  "const": "static"
                }
              },
              "required": [
                "entity_type"
              ]
            },
            "then": {
              "properties": {
                "entity_id": {
                  "pattern": "^evs_[a-z0-9][a-z0-9._:-]*$"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "entity_type": {
                  "const": "dynamic"
                }
              },
              "required": [
                "entity_type"
              ]
            },
            "then": {
              "properties": {
                "entity_id": {
                  "pattern": "^evd_[a-z0-9][a-z0-9._:-]*$"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "entity_type": {
                  "const": "symbolic"
                }
              },
              "required": [
                "entity_type"
              ]
            },
            "then": {
              "properties": {
                "entity_id": {
                  "pattern": "^evy_[a-z0-9][a-z0-9._:-]*$"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "entity_type": {
                  "const": "taint"
                }
              },
              "required": [
                "entity_type"
              ]
            },
            "then": {
              "properties": {
                "entity_id": {
                  "pattern": "^evt_[a-z0-9][a-z0-9._:-]*$"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "entity_type": {
                  "const": "proposal"
                }
              },
              "required": [
                "entity_type"
              ]
            },
            "then": {
              "properties": {
                "entity_id": {
                  "pattern": "^evp_[a-z0-9][a-z0-9._:-]*$"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "entity_type": {
                  "const": "receipt"
                }
              },
              "required": [
                "entity_type"
              ]
            },
            "then": {
              "properties": {
                "entity_id": {
                  "pattern": "^evr_[a-z0-9][a-z0-9._:-]*$"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "edge": {
                  "properties": {
                    "edge_type": {
                      "const": "supports"
                    }
                  },
                  "required": [
                    "edge_type"
                  ]
                }
              },
              "required": [
                "edge",
                "entity_type"
              ]
            },
            "then": {
              "properties": {
                "edge": {
                  "properties": {
                    "target_entity_type": {
                      "const": "proposal"
                    }
                  }
                },
                "entity_type": {
                  "enum": [
                    "static",
                    "dynamic",
                    "symbolic",
                    "taint",
                    "receipt"
                  ]
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "edge": {
                  "properties": {
                    "edge_type": {
                      "const": "derived_from"
                    }
                  },
                  "required": [
                    "edge_type"
                  ]
                }
              },
              "required": [
                "edge"
              ]
            },
            "then": {
              "properties": {
                "entity_type": {
                  "const": "proposal"
                },
                "edge": {
                  "properties": {
                    "target_entity_type": {
                      "enum": [
                        "static",
                        "dynamic",
                        "symbolic",
                        "taint"
                      ]
                    }
                  }
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "edge": {
                  "properties": {
                    "edge_type": {
                      "const": "corroborates"
                    }
                  },
                  "required": [
                    "edge_type"
                  ]
                }
              },
              "required": [
                "edge",
                "entity_type"
              ]
            },
            "then": {
              "anyOf": [
                {
                  "properties": {
                    "entity_type": {
                      "const": "static"
                    },
                    "edge": {
                      "properties": {
                        "target_entity_type": {
                          "const": "dynamic"
                        }
                      }
                    }
                  }
                },
                {
                  "properties": {
                    "entity_type": {
                      "const": "dynamic"
                    },
                    "edge": {
                      "properties": {
                        "target_entity_type": {
                          "const": "static"
                        }
                      }
                    }
                  }
                },
                {
                  "properties": {
                    "entity_type": {
                      "const": "symbolic"
                    },
                    "edge": {
                      "properties": {
                        "target_entity_type": {
                          "const": "taint"
                        }
                      }
                    }
                  }
                },
                {
                  "properties": {
                    "entity_type": {
                      "const": "taint"
                    },
                    "edge": {
                      "properties": {
                        "target_entity_type": {
                          "const": "symbolic"
                        }
                      }
                    }
                  }
                }
              ]
            }
          },
          {
            "if": {
              "properties": {
                "edge": {
                  "properties": {
                    "edge_type": {
                      "const": "supersedes"
                    }
                  },
                  "required": [
                    "edge_type"
                  ]
                }
              },
              "required": [
                "edge",
                "entity_type"
              ]
            },
            "then": {
              "anyOf": [
                {
                  "properties": {
                    "entity_type": {
                      "const": "proposal"
                    },
                    "edge": {
                      "properties": {
                        "target_entity_type": {
                          "const": "proposal"
                        }
                      }
                    }
                  }
                },
                {
                  "properties": {
                    "entity_type": {
                      "const": "receipt"
                    },
                    "edge": {
                      "properties": {
                        "target_entity_type": {
                          "const": "receipt"
                        }
                      }
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "chain": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "sequence_number",
        "previous_receipt_id",
        "previous_hash"
      ],
      "properties": {
        "sequence_number": {
          "type": "integer",
          "minimum": 0
        },
        "previous_receipt_id": {
          "type": [
            "string",
            "null"
          ],
          "format": "uuid"
        },
        "previous_hash": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[0-9a-f]{64}$"
        }
      }
    },
    "transaction": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "transaction_id",
        "scope",
        "phase",
        "program_transaction_id"
      ],
      "properties": {
        "transaction_id": {
          "type": "string",
          "format": "uuid"
        },
        "scope": {
          "type": "string",
          "enum": [
            "single",
            "batch"
          ]
        },
        "phase": {
          "type": "string",
          "enum": [
            "apply",
            "rollback",
            "other"
          ]
        },
        "program_transaction_id": {
          "type": "integer",
          "minimum": 0
        },
        "pre_apply_state_hash": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[0-9a-f]{64}$"
        },
        "post_apply_state_hash": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[0-9a-f]{64}$"
        }
      }
    },
    "receipt_links": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "receipt_id",
          "link_type"
        ],
        "properties": {
          "receipt_id": {
            "type": "string",
            "format": "uuid"
          },
          "link_type": {
            "type": "string",
            "enum": [
              "APPLIES_PROPOSAL",
              "ROLLS_BACK_APPLY",
              "APPLIES_PROPAGATION",
              "ROLLS_BACK_PROPAGATION",
              "RESOLVES_TYPE_CONFLICT"
            ]
          }
        }
      }
    },
    "metadata": {
      "type": "object"
    },
    "hash": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "action": {
            "const": "apply"
          }
        },
        "required": [
          "action"
        ]
      },
      "then": {
        "properties": {
          "target": {
            "required": [
              "old_value"
            ],
            "properties": {
              "old_value": {
                "type": "object",
                "required": [
                  "state"
                ],
                "properties": {
                  "state": {
                    "const": "APPROVED"
                  }
                }
              }
            }
          },
          "transaction": {
            "properties": {
              "phase": {
                "const": "apply"
              }
            },
            "required": [
              "phase"
            ]
          },
          "receipt_links": {
            "minItems": 1,
            "items": {
              "properties": {
                "link_type": {
                  "const": "APPLIES_PROPOSAL"
                }
              },
              "required": [
                "link_type"
              ]
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "action": {
            "const": "propagate"
          }
        },
        "required": [
          "action"
        ]
      },
      "then": {
        "properties": {
          "transaction": {
            "properties": {
              "phase": {
                "const": "apply"
              }
            },
            "required": [
              "phase"
            ]
          },
          "receipt_links": {
            "minItems": 1,
            "items": {
              "properties": {
                "link_type": {
                  "const": "APPLIES_PROPAGATION"
                }
              },
              "required": [
                "link_type"
              ]
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "action": {
            "const": "resolve_conflict"
          }
        },
        "required": [
          "action"
        ]
      },
      "then": {
        "properties": {
          "transaction": {
            "properties": {
              "phase": {
                "const": "apply"
              }
            },
            "required": [
              "phase"
            ]
          },
          "receipt_links": {
            "minItems": 1,
            "items": {
              "properties": {
                "link_type": {
                  "const": "RESOLVES_TYPE_CONFLICT"
                }
              },
              "required": [
                "link_type"
              ]
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "action": {
            "enum": [
              "rollback",
              "revert"
            ]
          }
        },
        "required": [
          "action"
        ]
      },
      "then": {
        "properties": {
          "transaction": {
            "properties": {
              "phase": {
                "const": "rollback"
              }
            },
            "required": [
              "phase"
            ]
          },
          "receipt_links": {
            "minItems": 1,
            "items": {
              "properties": {
                "link_type": {
                  "enum": [
                    "ROLLS_BACK_APPLY",
                    "ROLLS_BACK_PROPAGATION"
                  ]
                }
              },
              "required": [
                "link_type"
              ]
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "receipt_links": {
            "contains": {
              "type": "object",
              "properties": {
                "link_type": {
                  "const": "APPLIES_PROPAGATION"
                }
              },
              "required": [
                "link_type"
              ]
            }
          }
        },
        "required": [
          "receipt_links"
        ]
      },
      "then": {
        "properties": {
          "action": {
            "const": "propagate"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "receipt_links": {
            "contains": {
              "type": "object",
              "properties": {
                "link_type": {
                  "const": "ROLLS_BACK_PROPAGATION"
                }
              },
              "required": [
                "link_type"
              ]
            }
          }
        },
        "required": [
          "receipt_links"
        ]
      },
      "then": {
        "properties": {
          "action": {
            "enum": [
              "rollback",
              "revert"
            ]
          },
          "transaction": {
            "properties": {
              "phase": {
                "const": "rollback"
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "receipt_links": {
            "contains": {
              "type": "object",
              "properties": {
                "link_type": {
                  "const": "RESOLVES_TYPE_CONFLICT"
                }
              },
              "required": [
                "link_type"
              ]
            }
          }
        },
        "required": [
          "receipt_links"
        ]
      },
      "then": {
        "properties": {
          "action": {
            "const": "resolve_conflict"
          }
        }
      }
    }
  ]
}
